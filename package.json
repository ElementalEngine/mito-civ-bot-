{
  "name": "mito-civ-discord-bot",
  "version": "1.0.0",
  "description": "Bot for Civilization VI Discord Community «CivCPL». Developed in TypeScript using MongoDB, Express, Discord API, Steam Web API.",
  "keywords": [
    "Discord",
    "Bot",
    "Express",
    "TypeScript"
  ],
  "homepage": "https://github.com/ElementalEngine/mito-civ-discord-bot#readme",
  "bugs": {
    "url": "https://github.com/ElementalEngine/mito-civ-discord-bot/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ElementalEngine/mito-civ-discord-bot.git"
  },
  "license": "Apache-2.0",
  "author": "ProjectCisco",
  "main": "dist/index.js",
  "engines": {
    "node": ">=24.4.1"
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf dist tsconfig.tsbuildinfo && tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:watch": "nodemon",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "test": "jest"
  },
  "ts-node-dev": {
    "watch": [
      "src"
    ],
    "ext": "ts,json",
    "ignore": [
      "src/**/*.spec.ts",
      "src/**/*.test.ts"
    ]
  },
  "nodemonConfig": {
    "exec": "ts-node --esm src/index.ts",
    "watch": [
      "src"
    ],
    "ext": "ts,json",
    "ignore": [
      "dist",
      "node_modules"
    ]
  },
  "dependencies": {
    "@discordjs/rest": "^2.6.0",
    "axios": "^1.13.2",
    "body-parser": "^2.2.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "steamapi": "^3.1.4"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always",
    "endOfLine": "auto"
  }
}
