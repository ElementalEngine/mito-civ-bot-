{
  "name": "mito-civ-discord-bot",
  "version": "1.0.0",
  "description": "Discord bot with Express backend",
  "engines": {
    "node": ">=24.4.1"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "ts-node --esm src/index.ts",
    "lint": "eslint . --ext .ts",
    "test": "jest",

    "live": "nodemon"
  },
  "ts-node-dev": {
    "watch": ["src"],
    "ext": "ts,json",
    "ignore": ["src/**/*.spec.ts", "src/**/*.test.ts"]
  },
  "dependencies": {
    "discord.js": "^14.11.0",
    "@discordjs/rest": "^1.5.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "axios": "^1.4.0",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "mongoose": "^8.13.2",
    "steamapi": "^2.4.2"
  },
  "devDependencies": {
    "typescript": "^5.1.3",
    "ts-node-dev": "^2.0.0",
    "ts-node": "^10.9.1",
    "@types/node": "^20.2.5",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.17",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.4",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.28.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "@types/jest": "^29.5.3"
  }
}